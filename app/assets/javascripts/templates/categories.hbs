<button class="btn btn-default center-block btn-with_margin" {{action 'openForm'}}>Додати нову категорію працівника</button>
{{#if isForm}}
  <div class="panel panel-warning panel-category center-block">
    <div class="panel-body">
      <form class="navbar-form center-btn">
        <div class="form-group">
          {{input type="text" valueBinding="categoryName" class="form-control" placeholder="Категорія працівника"}}
        </div>
        <button type="submit" class="btn btn-success" {{action 'createCategory'}}>Додати</button>
      </form>
    </div>
  </div>
{{/if}}

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Категорія</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each itemController='category'}}
      <tr>
        <td>{{id}}</td>
        <td>
          {{#if isEdit}}
            {{edit-record value=name focus-out="saveCategory" mouseenter="saveCategory" insert-newline="saveCategory"}}
          {{ else }}
            <span {{action "editCategory" on="doubleClick"}}>{{name}}</span>
          {{/if}}
        </td>
        <td><a {{action "deleteCategory"}}><span class="glyphicon glyphicon-floppy-remove"></span></a></td>
      </tr>
    {{/each}}
  </tbody>
</table>

