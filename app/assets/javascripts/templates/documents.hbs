<br>
<button class="btn btn-success" {{action "toggleForm"}}>Open form</button>
{{#if isForm}}
  <form class="form-inline" id="createDocument">
    <div class="form-group">
      Name: {{input type="text" valueBinding="documentName"}}
    </div><br>
    <div class="form-group">
      New file:
      {{input type="file" class="form-control" name="file"}}
    </div><br>
    <div class="form-group">
      <p>You can change it</p>
      {{#each proxiedCategory}}
        {{input type="checkbox" checked=checked}} {{content.name}}<br>
      {{/each}}
    </div><br>
    <button type="submit" {{action 'createDocument'}} class="btn btn-success">Submit</button>
  </form>
{{/if}}

{{#each itemController="document"}}
	<li>{{name}} -- {{doc_path}} -- <a href="" {{action 'updateForm'}}>Update</a> -- <a href="" {{action 'delete'}}>Delete</a></li>
  {{#if isUpdating}}
    {{render 'updateForm' this}}
  {{/if}}
{{/each}}