<br>
<button class="btn btn-default" {{action 'openForm'}}>Add new news</button>
{{#if isForm}}
  <form>
    <div class="form-group">
      {{input type="text" valueBinding="newsTitle" class="form-control" placeholder="Заглавление"}}
    </div>
    <div class="form-group">
      {{wysiwyg-editor content=newsContent}}  
    </div>
    <div class="form-group">
      {{input type="text" valueBinding="newsAlias" class="form-control" placeholder="Алиас"}}
    </div>
    <button type="submit" class="btn btn-success" {{action 'createCategory'}}>Submit</button>
  </form>
{{/if}}
{{#each}}

<div class="panel panel-default">
  <div class="panel-heading">
    {{ title }}
  </div>
  <div class="panel-body">{{ body }}</div>
  <div class="panel-footer">{{ alias }}</div>
</div>

{{/each }}