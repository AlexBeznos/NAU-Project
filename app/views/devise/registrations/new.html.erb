<h2>Реєстрація</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group" style="padding-top: 30px">
    <label for="inputEmail3" class="col-sm-2 control-label"><%= f.label :email %></label>
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Поштова скринька"  %>
    </div>
  </div>
  <div class="form-group" style="padding-top: 30px">
    <label for="inputPassword3" class="col-sm-2 control-label"><%= f.label "Пароль"%></label>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Пароль"  %>
    </div>
  </div>
  <div class="form-group" style="padding-top: 30px">
    <label for="inputPassword3" class="col-sm-2 control-label"><%= f.label "Підтвердити" %></label>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Підтвердити пароль" %>
    </div>
  </div>
  <div class="form-group" style="padding-top: 30px">
    <label for="inputPassword3" class="col-sm-2 control-label"><%= f.label "Категорія" %></label>
    <div class="col-sm-10">
  	  <%= select_tag(:category_id, options_for_select(@category_ids, params[:user]), class: "form-control") %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Зареєструватися", class: "btn btn-default", style: "margin-top: 10px" %>
    </div>
  </div>
<% end %>