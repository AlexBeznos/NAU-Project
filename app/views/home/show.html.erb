<table class="table table-striped table-hover">
  <% @documents.each do |doc| %>
    <tr>
      <td>
        <% if doc.able_to_download?(current_user) %>
          <%= link_to doc.name, doc.doc_path %>
        <% else %>
          <%= doc.name %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>